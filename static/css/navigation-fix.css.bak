/* 导航栏修复样式 - 临时覆盖 */
.navigation-bar {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    z-index: 1000 !important;
    background: rgba(255, 255, 255, 0.95) !important;
    backdrop-filter: blur(20px) !important;
    border-bottom: 0.5px solid rgba(0, 0, 0, 0.08) !important;
    min-height: 64px !important;
    display: flex !important;
    align-items: center !important;
}

.nav-content {
    display: flex !important;
    align-items: center !important;
    justify-content: space-between !important;
    width: 100% !important;
    max-width: none !important;
    margin: 0 !important;
    padding: 0 24px !important;
    box-sizing: border-box !important;
}

.nav-brand {
    display: flex !important;
    align-items: center !important;
    font-size: 20px !important;
    font-weight: 600 !important;
    color: #1d1d1f !important;
    text-decoration: none !important;
    flex-shrink: 0 !important;
}

.nav-brand i {
    margin-right: 8px !important;
    color: #007AFF !important;
    font-size: 1.2em !important;
}

.nav-actions {
    display: flex !important;
    align-items: center !important;
    gap: 12px !important;
    flex-shrink: 0 !important;
    flex-wrap: nowrap !important;
}

.nav-actions .btn {
    display: inline-flex !important;
    align-items: center !important;
    gap: 6px !important;
    padding: 8px 16px !important;
    border-radius: 12px !important;
    font-size: 14px !important;
    font-weight: 500 !important;
    text-decoration: none !important;
    white-space: nowrap !important;
    border: 1px solid transparent !important;
    flex-shrink: 0 !important;
    box-sizing: border-box !important;
    transition: all 0.2s ease !important;
}

.nav-actions .btn-primary {
    background: #007AFF !important;
    color: white !important;
    box-shadow: 0 2px 8px rgba(0, 122, 255, 0.3) !important;
}

.nav-actions .btn-primary:hover {
    background: #0056b3 !important;
    transform: translateY(-1px) !important;
    box-shadow: 0 4px 12px rgba(0, 122, 255, 0.4) !important;
    color: white !important;
    text-decoration: none !important;
}

.nav-actions .btn-secondary {
    background: rgba(174, 174, 178, 0.1) !important;
    color: #1d1d1f !important;
    border: 1px solid rgba(209, 209, 214, 0.5) !important;
}

.nav-actions .btn-secondary:hover {
    background: rgba(174, 174, 178, 0.15) !important;
    border-color: #8e8e93 !important;
    transform: translateY(-1px) !important;
    color: #1d1d1f !important;
    text-decoration: none !important;
}

.user-menu {
    display: flex !important;
    align-items: center !important;
    gap: 12px !important;
    padding-left: 12px !important;
    border-left: 1px solid rgba(209, 209, 214, 0.4) !important;
    margin-left: 8px !important;
    flex-shrink: 0 !important;
}

.user-trigger {
    display: flex !important;
    align-items: center !important;
    gap: 8px !important;
    cursor: pointer !important;
    padding: 8px 12px !important;
    border-radius: 12px !important;
    transition: background-color 0.2s ease !important;
}

.user-trigger:hover {
    background: rgba(245, 245, 247, 0.8) !important;
}

.user-info {
    display: flex !important;
    align-items: center !important;
    gap: 8px !important;
    color: #8e8e93 !important;
    font-size: 14px !important;
    font-weight: 500 !important;
}

.user-info i {
    font-size: 16px !important;
    color: #007AFF !important;
}

.user-name {
    color: #1d1d1f !important;
}

.dropdown-arrow {
    font-size: 12px !important;
    color: #8e8e93 !important;
    transition: transform 0.2s ease !important;
}

/* 确保主内容不被导航栏遮挡 */
.main-content {
    padding-top: 84px !important;
}

/* 移动端适配 */
@media (max-width: 768px) {
    .nav-content {
        padding: 0 16px !important;
    }
    
    .nav-actions {
        gap: 8px !important;
    }
    
    .nav-actions .btn {
        padding: 6px 12px !important;
        font-size: 13px !important;
    }
    
    .user-menu {
        margin-left: 4px !important;
        padding-left: 8px !important;
    }
    
    .user-info {
        font-size: 13px !important;
    }
}

@media (max-width: 480px) {
    .nav-content {
        padding: 0 12px !important;
    }
    
    .nav-actions .btn span {
        display: none !important;
    }
    
    .nav-actions .btn {
        padding: 6px 8px !important;
    }
    
    .user-name {
        display: none !important;
    }
}